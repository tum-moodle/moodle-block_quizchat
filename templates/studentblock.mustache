{{!
    @template block_quizchat/studentblock

    Create a quizchat block

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<div class="mt-2">
        {{#enableblock}}
        {{#sendmsgcap}}
        {{{ questions_form }}}
    <form id="block_quizchat_student_send">
        <div class="input-group mb-1">
            <input required type="text" name="block_quizchat_input_student_send" id="block_quizchat_input_student_send" class="form-control" placeholder="{{#str}} placeholder_student_send_input, block_quizchat{{/str}}" aria-label="{{#str}} placeholder_student_send_input, block_quizchat{{/str}}" title="{{#str}} txtinput_required, block_quizchat{{/str}}" aria-describedby="block_quizchat_button_student_send">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit" id="block_quizchat_button_student_send">{{#str}} caption_student_send_submit, block_quizchat{{/str}}</button>
            </div>
        </div>
            <small class="block_quizchat_student_info">
            <span id="info_message_to_instructors_only">{{#pix}} i/info, core, Info {{/pix}}{{#str}} info_message_to_instructors_only, block_quizchat {{/str}}
        <br></span>
        <span id="charCount_out">{{#pix}} i/info, core, Info {{/pix}}<span id="charCount">{{quizchat_msg_length}}{{#str}} spantxt_charCount, block_quizchat{{/str}}
        <br></span>
        </small></form>
        {{/sendmsgcap}}
        {{^sendmsgcap}}
        <form id="block_quizchat_student_send">
            <small class="block_quizchat_student_info">
        <span id="send_msg_not_allowed">{{#pix}} i/info, core, Info {{/pix}}{{#str}} send_msg_deactivated_student, block_quizchat{{/str}}</span>
        </small></form>
        {{/sendmsgcap}}
        {{/enableblock}}
        {{^enableblock}}
        <form id="block_quizchat_student_send">
            <small class="block_quizchat_student_info">
        <span id="available_after_attempt">{{#pix}} i/info, core, Info {{/pix}}{{#str}} available_after_attempt, block_quizchat{{/str}}</span>
        </small></form>
        {{/enableblock}}
</div>
